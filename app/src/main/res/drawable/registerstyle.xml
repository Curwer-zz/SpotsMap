<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:topLeftRadius="3dip" 
             	  android:topRightRadius="3dip"/>
         <stroke android:width="1dip" android:color="#4E63AD" />
         <gradient android:angle="-90" android:startColor="#3952AD" android:endColor="#4E63AD"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:topLeftRadius="3dip" 
             	  android:topRightRadius="3dip"/>
         <stroke android:width="1dip" android:color="#4E63AD" />
         <solid android:color="#D6D6D8"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:topLeftRadius="3dip" 
             	  android:topRightRadius="3dip"/>
         <stroke android:width="1dip" android:color="#4E63AD" />
         <gradient android:angle="-90" android:startColor="#3952AD" android:endColor="#4E63AD" />            
     </shape>
 </item>
</selector>