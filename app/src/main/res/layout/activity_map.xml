<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:panelHeight="0dp"
            sothree:shadowHeight="4dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/FloatingActionBarColor_4CAF50" >



                    </android.support.v7.widget.Toolbar>

                <RelativeLayout
                    android:id="@+id/actionBarRel"
                    android:layout_width="fill_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="#33b5e5"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/logoutRel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/txtLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Logout"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFF" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/refrechRel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true">

                        <TextView
                            android:id="@+id/txtRefresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Refresh"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFF" />
                    </RelativeLayout>

                </RelativeLayout>


                <fragment
                    android:id="@+id/mapfrag"
                    android:name="com.androidmapsextensions.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/actionBarRel" />

                <FrameLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <net.eray.ParkourPlayground.floatingActionButton.FloatingActionButton
                        android:id="@+id/fabbutton_cam"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        app:color="#0dbe0d"
                        app:drawable="@drawable/ic_image_camera" />

                    <net.eray.ParkourPlayground.floatingActionButton.FloatingActionButton
                        android:id="@+id/fabbutton_location"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="85dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="?android:actionBarSize"
                        app:color="#0dbe0d"
                        app:drawable="@drawable/ic_maps_my_location" />

                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scrollRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_re">

                <TextView
                    android:id="@+id/marker_titlev2"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:background="#FFF"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:textColor="@android:color/holo_blue_dark" />

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/marker_titlev2">

                    <RelativeLayout
                        android:id="@+id/one"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">


                        <RelativeLayout
                            android:id="@+id/squareRelative"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="#FFF"
                            android:padding="10dp">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/mapPagerAlbum"
                                android:layout_width="match_parent"
                                android:layout_height="300dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/two"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_below="@+id/squareRelative"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="7dp"
                            android:background="#FFF"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <TextView
                                android:id="@+id/staticUplader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingBottom="5dp"
                                android:text="Uploader:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#50575757" />

                            <TextView
                                android:id="@+id/uploader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/staticUplader"
                                android:layout_marginBottom="10dp"
                                android:text="--"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/three"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_below="@+id/two"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="7dp"
                            android:background="#FFF"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <TextView
                                android:id="@+id/descr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingBottom="5dp"
                                android:text="Description"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#50575757" />

                            <TextView
                                android:id="@+id/decsripText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/descr"
                                android:layout_marginBottom="15dp"
                                android:text="--"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>
        </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    </io.codetail.widget.RevealFrameLayout>

    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize"
        android:background="#388E3C"
        android:layout_gravity="left|start"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#388E3C">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/profile"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#388E3C"
            android:id="@+id/logout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/logout"
                android:id="@+id/textView4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>